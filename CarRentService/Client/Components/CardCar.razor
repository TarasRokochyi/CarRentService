
<div class="card d-inline-flex mx-1 my-2" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><strong>@car.Make</strong></h5>
    <p class="card-text"><strong>Model:</strong> @car.Model</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><strong>Model year</strong>: @car.ModelYear</li>
    <li class="list-group-item"><strong>Body class:</strong> @car.BodyClass</li>
    <li class="list-group-item"><strong>VIN code:</strong> @car.VIN</li>
  </ul>
  <div class="card-body mx-auto">
    <a href="cars/@car.Id" class="btn btn-info">info</a>
    @if (car.IsInUse) {
        <a href="#" class="btn btn-secondary mx-1 disabled">Not available</a>
    }
    else{
        <a href="#" class="btn btn-primary mx-1">book for @car.RentalCost$ a day</a>
    }
  </div>
</div>

@code {

    [Parameter]
    public CardCarDTO car { get; set; }
}
